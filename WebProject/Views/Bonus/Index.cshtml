@model IEnumerable<WebProject.Data.Entity.Bonus>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Список бонусов</h2>
        </div>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <div class="col-6 text-right">
                <a asp-controller="Bonus" asp-action="Create" class="btn btn-primary">Создать "бонус"</a>
            </div>
        }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Описание
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bonus in Model)
                {
                <tr>
                    <td width="25%">@bonus.Name</td>
                    <td width="25%">@bonus.Opisanie</td>
                    <td width="25%">
                        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                        {
                        <td width="25%">
                            <div class="w-150 btn-group" role="group">
                                <a asp-controller="Bonus" asp-action="Update" asp-route-Id="@bonus.Id" class="btn btn-success mx-1">Изменить</a>
                                <a asp-controller="Bonus" asp-action="Delete" asp-route-Id="@bonus.Id" class="btn btn-danger mx-1">Удалить</a>
                            </div>
                        </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>

