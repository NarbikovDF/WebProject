<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Букмекерская контора</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">БУКМЕКЕРСКАЯ КОНТОРА</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Bet" asp-action="Index">Ставка</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Bonus" asp-action="Index">Бонус</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Client" asp-action="Index">Клиенты</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Collaboration" asp-action="Index">Коллаборации</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Contora" asp-action="Index">Контора</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Mini_Game" asp-action="Index">Мини игры</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Staff" asp-action="Index">Сотрудники</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Event" asp-action="Index">События</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Vid_sporta" asp-action="Index">Вид спорта</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-dark" asp-controller="Users" asp-action="Details">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <form class="form-inline" method="post" asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
                            </form>
                        </li>
                    </ul>
                    }
                    else
                    {
                        <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Register">Зарегистрируйтесь для просмотра содержимого </a>
                        <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Login">Или войдите </a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
