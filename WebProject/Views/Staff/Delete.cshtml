@model WebProject.Data.Entity.Staff

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Удалить сотрудника</h2>
        </div>
        <div class="row">
            <div class="col-md-5">
                <div class="form-group row">
                    <div class="col-5">
                        <input asp-for="Staff_name" disabled class="form-control" />
                        <input asp-for="Staff_surname" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 row">
                        <div class="col-3">
                            <input type="submit" class="btn btn-danger w-150" value="Удалить" />
                        </div>
                        <div class="col-3">
                            <a asp-action="Index" class="btn btn-info w-150">Вернуться</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
