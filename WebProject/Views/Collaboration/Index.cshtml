@model IEnumerable<WebProject.Data.Entity.Collaboration>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Список коллабораций</h2>
        </div>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <div class="col-6 text-right">
                <a asp-controller="Collaboration" asp-action="Create" class="btn btn-primary">Создать "коллаборацию"</a>
            </div>
        }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var collaboration in Model)
                {
                <tr>
                    <td width="25%">@collaboration.Name</td>
                    @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                    {
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Collaboration" asp-action="Update" asp-route-Id="@collaboration.Id" class="btn btn-success mx-1">Изменить</a>
                                <a asp-controller="Collaboration" asp-action="Delete" asp-route-Id="@collaboration.Id" class="btn btn-danger mx-1">Удалить</a>
                            </div>
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
        }
    else
    {
        <p>No items created yet</p>
    }
</div>

